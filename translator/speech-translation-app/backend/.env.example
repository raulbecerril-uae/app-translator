# Server Configuration
PORT=8080
NODE_ENV=development

# WebSocket Configuration
WS_PORT=8080
MAX_CONNECTIONS=100

# Audio Configuration
SAMPLE_RATE=16000
AUDIO_CHANNELS=1
BUFFER_SIZE=4096

# Translation Configuration
DEFAULT_SOURCE_LANG=en
DEFAULT_TARGET_LANG=ar
TRANSLATION_TIMEOUT=10000

# Opus-MT Configuration (when available)
OPUS_MT_MODELS_PATH=./models
OPUS_MT_CACHE_SIZE=100

# External API Configuration (optional)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
AZURE_TRANSLATE_KEY=your_azure_translate_key
AZURE_TRANSLATE_REGION=your_azure_region

# Logging
LOG_LEVEL=info
LOG_FILE=logs/translation-server.log

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
MAX_FILE_SIZE=10MB
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
